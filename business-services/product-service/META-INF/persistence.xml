<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistenceUnit">
        <class>com.gavin.entity.CategoryEntity</class>
        <class>com.gavin.entity.ProductEntity</class>
        <class>com.gavin.entity.PointRewardPlanEntity</class>
        <class>com.gavin.entity.ProductReservationEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/SCHEMA_PRODUCT"/>
